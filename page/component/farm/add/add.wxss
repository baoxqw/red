/* 下拉框 */

.list-msg2 {
  color: rgb(138, 138, 138);
  font-size: 30rpx !important;
  height: 60rpx;
}

.list-msg2 text {
  margin-left: 20rpx;
  float: left;
}

.list-msg2 image {
  margin-top: 10rpx;
  margin-right: 20rpx;
  float: right;
}

.select_box {
  position: relative;
  background-color: #fbf9fe;
  padding: 0 10rpx;
  line-height: 50rpx;
  color: black;
  left: 2%;
  width: 93%;
  z-index: 666;
  overflow: hidden;
  animation: myfirst 0.5s;
}

@keyframes myfirst {
  from {
    height: 0rpx;
  }

  to {
    height: 60rpx;
  }
}

.select_one {
  color: rgb(138, 138, 138);
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
}

