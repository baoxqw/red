  border-bottom: 1px solid rgb(240, 240, 240);
}

.inputName {
  width: 472rpx;
  margin-left: 20rpx;
  padding-left: 20rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  border: 1px solid rgb(138, 138, 138);
  float: left;
}

.inputAdress {
  width: 674rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  margin-left:27rpx;

}

.topdesc {
  height: 300rpx !important;
}

.addOrder {
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1px solid rgb(138, 138, 138);
  margin-left: 20rpx;
}

.desc {
  width: 415rpx;
  height: 195rpx !important;
}

.top-fir>view {
  display: inline-block;
  float: left;
  height: 50rpx;
  margin-right: 20rpx;
