/* 日期选择 */

.timer-title {
  font-size: 25rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin-left: 20rpx;
  color: rgb(25, 139, 254);
}

.timer picker {
  width: 62%;
  margin: 0 auto;
  border: 1px solid #e0e4e7;
  border-radius: 20rpx;
}

.timer .picker {
  font-size: 30rpx;
  border: 0;
  width: 88%!important;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 0!important;
  box-sizing: border-box;
  padding-right: 60rpx;
  background: url(https://lg-3jb3svnw-1257044323.cos.ap-shanghai.myqcloud.com/publish-solid-bottom.png) no-repeat 95% center;
  background-size: 30rpx 30rpx;
}

/* 地区选择 */

.area-title {
  height: 72rpx;
  line-height: 72rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: rgb(25, 139, 254);
}

.publish-right {
  box-sizing: border-box;
  text-align: center;
}

picker {
  width: 100%;
  margin-top: 12rpx;
  overflow: hidden;
  color: #000;
  font-size: 25rpx;
}

.picker {
  width: 170rpx;
  overflow: hidden;
  border: 1rpx solid #ededed;
  padding: 0 20rpx;
  border-radius: 10rpx;
  margin: 5rpx 10rpx 0 0;
  /* background:linear-gradient(#ecedef,#edf1f2,#e0e4e7); */
