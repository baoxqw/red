/* page/component/add/add.wxss */

.top-fir {
  width: 100%;
  height: 98rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 22rpx 0 22rpx 20rpx;
  /* border-bottom: 1px solid rgb(240, 240, 240); */
  float: left;
}

.top-fir>view {
  display: inline-block;
  float: left;
  height: 50rpx;
  margin-right: 20rpx;
  line-height: 50rpx;
  color: rgb(25, 139, 254);
  font-size: 25rpx;
}

.top-fir>input {
  display: inline-block;
  float: left;
  height: 50rpx;
  line-height: 50rpx;
}

.add-main {
  font-size: 24rpx;
  color: rgb(25, 139, 254);
}

.main-title {
  height: 72rpx;
  line-height: 72rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  color: rgb(25, 139, 254);
  font-size: 25rpx;
}

.main-squre {
  height: 150rpx;
  border-bottom: 1px solid rgb(240, 240, 240);
  position: relative;
}

.inputName {
  margin-right: 20rpx;
  border: 1px solid rgb(240, 240, 240);
  border-radius: 10rpx;
